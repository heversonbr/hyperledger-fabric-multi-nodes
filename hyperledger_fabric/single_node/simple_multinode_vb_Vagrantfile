# -*- mode: ruby -*-
# vi: set ft=ruby :
# INFO: This example deploys a multi-node using virtualbox.

Vagrant.configure('2') do |config|

    config.vm.provider "virtualbox" do |v|
      v.memory = 256
      v.cpus = 1
    end

    (1..2).each do |i|
      config.vm.define "server-#{i}" do |s|
        s.vm.box = "ubuntu/xenial64"
        s.vm.network :private_network, ip: "192.168.0.1#{i}" 
        s.vm.hostname = "server-#{i}"
      end
     end
  end
