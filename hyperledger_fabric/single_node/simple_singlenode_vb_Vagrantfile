# -*- mode: ruby -*-
# vi: set ft=ruby :
# INFO: This example deploys a multi-node using virtualbox.

Vagrant.configure('2') do |config|

    config.vm.provider "virtualbox" do |v|
      v.memory = 2048
      v.cpus = 1
    end

    
    config.vm.define "server-1" do |s|
        s.vm.box = "ubuntu/xenial64"
        s.vm.network :private_network, ip: "192.168.0.10" 
        s.vm.hostname = "server-1"
    end
end
